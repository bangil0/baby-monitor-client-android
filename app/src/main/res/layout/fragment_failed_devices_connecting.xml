<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/background">

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedBaseStartGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.064" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedBaseEndGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.936" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedHeaderTopGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.156" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/connecting"
        android:textColor="@color/accent"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/connectingDevicesFailedHeaderBottomGl"
        app:layout_constraintEnd_toEndOf="@+id/connectingDevicesFailedBaseEndGl"
        app:layout_constraintStart_toStartOf="@+id/connectingDevicesFailedBaseStartGl"
        app:layout_constraintTop_toTopOf="@+id/connectingDevicesFailedHeaderTopGl" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedHeaderBottomGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.19" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedText1TopGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.202" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/connecting_devices_failed_text_1"
        android:textColor="@color/white"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/connectingDevicesFailedText1BottomGl"
        app:layout_constraintEnd_toEndOf="@+id/connectingDevicesFailedBaseEndGl"
        app:layout_constraintStart_toStartOf="@+id/connectingDevicesFailedBaseStartGl"
        app:layout_constraintTop_toTopOf="@+id/connectingDevicesFailedText1TopGl" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedText1BottomGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.322" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedText2TopGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.34" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/rubik_regular"
        android:text="@string/connecting_devices_failed_text_2"
        android:textColor="@color/accent"
        app:autoSizePresetSizes="@array/autosize_text_sizes"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@+id/connectingDevicesFailedText2BottomGl"
        app:layout_constraintEnd_toEndOf="@+id/connectingDevicesFailedBaseEndGl"
        app:layout_constraintStart_toStartOf="@+id/connectingDevicesFailedBaseStartGl"
        app:layout_constraintTop_toTopOf="@+id/connectingDevicesFailedText2TopGl" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedText2BottomGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.388" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedImageTopGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.486" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/connectingDevicesFailedImageBottomGl"
        app:layout_constraintEnd_toEndOf="@+id/connectingDevicesFailedBaseEndGl"
        app:layout_constraintStart_toStartOf="@+id/connectingDevicesFailedBaseStartGl"
        app:layout_constraintTop_toTopOf="@+id/connectingDevicesFailedImageTopGl"
        app:srcCompat="@drawable/failed" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedImageBottomGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.606" />

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedButtonTopGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.844" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/configurationFailedTryAgainButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/try_again"
        android:background="@drawable/button_purple_outline_to_purple_rounded"
        app:layout_constraintBottom_toBottomOf="@+id/connectingDevicesFailedButtonBottomGl"
        app:layout_constraintEnd_toEndOf="@+id/connectingDevicesFailedBaseEndGl"
        app:layout_constraintStart_toStartOf="@+id/connectingDevicesFailedBaseStartGl"
        app:layout_constraintTop_toTopOf="@+id/connectingDevicesFailedButtonTopGl" >

        <TextView
            android:id="@+id/connectionConnectWiFiTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="@string/try_again"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.Guideline
        android:id="@+id/connectingDevicesFailedButtonBottomGl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.928" />

</android.support.constraint.ConstraintLayout>
